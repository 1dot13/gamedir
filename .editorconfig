root = true

[*.{js,json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ini,INI,xml,XML}]
# need to make sure existing files are converted to utf8 first
#charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
